<Page
    x:Class="WpfControlLibrary1.DatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfControlLibrary1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DatePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <DatePicker Name="First" SelectedDateChanged="DatePicker_SelectedDateChanged"/>
        <DatePicker Name="Second" Grid.Row="1" SelectedDateChanged="DatePicker_SelectedDateChanged"/>
        <TextBlock
            x:Name="ResBox"
            Grid.Row="2"
            Padding="16"
            FontSize="32"
            Text="" 
            />
    </Grid>
</Page>
